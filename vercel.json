{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/*.ts": {
      "maxDuration": 30
    },
    "api/admin/*.ts": {
      "maxDuration": 30
    },
    "api/user/*.ts": {
      "maxDuration": 30
    },
    "api/user/invoices/*.ts": {
      "maxDuration": 60
    },
    "api/user/issued-invoices/*.ts": {
      "maxDuration": 30
    },
    "api/user/issued-invoices/[id]/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
